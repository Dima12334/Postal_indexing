<Window x:Class="Postal_indexing.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Postal_indexing"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Icon="Resources\icon.jpg"
        Title="Вікно авторизації" Height="462" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <Border BorderBrush="#FF678CFD" BorderThickness="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="800" Background="#FF678CFD">
            <Label Content="Вікно авторизації" HorizontalAlignment="Center" Height="36" VerticalAlignment="Center" Width="258" FontFamily="Modern No. 20" FontSize="22"/>
        </Border>
        <Label Content="Ім'я : " HorizontalAlignment="Left" Height="38" Margin="102,143,0,0" VerticalAlignment="Top" Width="139" FontFamily="Modern No. 20" FontSize="18"/>
        <Label Content="Пароль : " HorizontalAlignment="Left" Height="31" Margin="68,224,0,0" VerticalAlignment="Top" Width="86" FontFamily="Modern No. 20" FontSize="18"/>
        <TextBox x:Name="LoginBox" MaxLength="30" HorizontalAlignment="Left" Height="28" Margin="172,148,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="562" FontFamily="Arial" FontSize="18" FontStretch="Normal"/>
        <PasswordBox x:Name="PassBox" MaxLength="30" HorizontalAlignment="Left" Height="28" Margin="172,226,0,0" VerticalAlignment="Top" Width="562" FontFamily="Arial" FontSize="18" />
        <Button x:Name="MainPageButton" Content="Головна сторінка" HorizontalAlignment="Center" Height="46" Margin="0,290,0,0" VerticalAlignment="Top" Width="176" FontFamily="Modern No. 20" FontSize="20" Background="#FF678CFD" BorderBrush="#FFA7A7A7" Click="ClickMainPage"/>
        <Button x:Name="AddButton" Content="Доповнення даних" HorizontalAlignment="Left" Height="46" Margin="426,361,0,0" VerticalAlignment="Top" Width="208" FontFamily="Modern No. 20" FontSize="20" Background="#FF678CFD" BorderBrush="#FFA7A7A7" Click="ClickAdd" Visibility="Hidden"/>
        <Button x:Name="AuthButton" Content="Вхід" HorizontalAlignment="Left" Height="46" Margin="567,290,0,0" VerticalAlignment="Top" Width="167" FontFamily="Modern No. 20" FontSize="20" Background="#FF678CFD" BorderBrush="#FFA7A7A7" Click="ClickAuth"/>
        <Button x:Name="BackButton" Content="Назад" HorizontalAlignment="Left" Height="46" Margin="68,290,0,0" VerticalAlignment="Top" Width="167" FontFamily="Modern No. 20" FontSize="20" Background="#FF678CFD" BorderBrush="#FFA7A7A7" Click="ClickBack"/>
        <Button x:Name="EditButton" Content="Редагування даних" HorizontalAlignment="Left" Height="46" Margin="172,361,0,0" VerticalAlignment="Top" Width="208" FontFamily="Modern No. 20" FontSize="20" Background="#FF678CFD" BorderBrush="#FFA7A7A7" Click="ClickEdit" Visibility="Hidden"/>
    </Grid>
</Window>